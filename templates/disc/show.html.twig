{% extends 'base.html.twig' %}

{% block title %}Détails du disque{% endblock %}

{% block body %}
    <h1>Détails du disque</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ disc.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ disc.title }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ disc.year }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ disc.picture }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ disc.Label }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_disc_index') }}">Retour à la liste</a>

    <a href="{{ path('app_disc_edit', {'id': disc.id}) }}">Modifier</a>

    {{ include('disc/_delete_form.html.twig') }}
{% endblock %}
