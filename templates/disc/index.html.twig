{% extends 'base.html.twig' %}

{% block title %}Liste des disques{% endblock %}

{% block body %}
    <h1>Liste des disques</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Année</th>
                <th>Picture</th>
                <th>Label</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for disc in discs %}
            <tr>
                <td>{{ disc.id }}</td>
                <td>{{ disc.title }}</td>
                <td>{{ disc.year }}</td>
                <td>{{ disc.picture }}</td>
                <td>{{ disc.Label }}</td>
                <td>
                    <a href="{{ path('app_disc_show', {'id': disc.id}) }}">Détails</a>
                    <a href="{{ path('app_disc_edit', {'id': disc.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">aucun disque</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_disc_new') }}">Cree un nouvel enregistrement</a>
{% endblock %}
